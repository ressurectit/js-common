{
    "compilerOptions":
    {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "outDir": "dist/es5",
        "lib": 
        [
            "es2016", 
            "dom"
        ]
    },
    "exclude":
    [
        "node_modules",
        "dist"
    ]
}